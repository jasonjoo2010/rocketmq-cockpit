<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ndpmedia.rocketmq.cockpit.mybatis.mapper.DeskMapper">

    <resultMap id="deskResultMap" type="com.ndpmedia.rocketmq.cockpit.model.Desk">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="getDesk" resultMap="deskResultMap">
        SELECT id, name
        FROM desk
        WHERE id = #{deskId}
    </select>
</mapper>